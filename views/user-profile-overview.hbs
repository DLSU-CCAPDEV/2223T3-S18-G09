<!doctype html>
<html lang="en">

<head>
    <title>User Profile</title>
    {{> prerequisites}}
</head>

<body>
    <!-- script for js functionality -->
    <script type="text/javascript" src="../js/script.js"></script>

    <!-- navigation bar -->
    {{> navbar}}

    <!-- absolute positioned background header -->
    <img class="user-header position-absolute" src="{{bannerImagePath}}" alt="User Banner">

    <div class="container-fluid m-0">
        <div class="row">
            <div class="col position-relative col-md-2">
                <!-- Picture here -->
                <img class="img-thumbnail position-absolute user-pfp" style="width:175px; height:175px;"
                    src="{{avatarImagePath}}" alt="User PFP">

            </div>

            <div class="col mt-5 col-md-6">
                <span class="fw-bold fs-2" style="color: white;">{{first_name}} {{last_name}}</span>
                <br>
                <span class="fs-4" style="color: white;">@{{username}}</span>
                <br>

                <span class="fs-6" style="color: white;" A>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-card-text me-1" viewBox="0 0 16 16">
                        <path
                            d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                        <path
                            d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z" />
                    </svg>

                    {{formatNumReview reviewCount}}</span>
            </div>
            <div class="col position-relative col-md-4">
                
            </div>
        </div>
    </div>

    <!-- container for the header - profile picture, user name, profile banner -->
    <div class="container-fluid mt-5">

        <!-- user banner -->
        <!-- <section class="mb-4">
            <img class="user-header w-100 position-absolute" src="../images/user-banner.jpg" alt="User Header">
        </section> -->

        <div class="row">
            <div class="col col-md-2 px-5 mt-3 align-items-start">
                <span class="lead fw-bold">{{first_name}}'s Profile</span>
                <br>
                <!-- Update profile button here -->
                {{#if (isEqual username user)}}
                    <a href="/update-profile">
                        <button class="btn btn-primary">

                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-pencil-square me-1" viewBox="0 0 16 16">
                                <path
                                    d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd"
                                    d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>

                            Update Your Profile
                        </button>
                    </a>
                {{/if}}

                <br>
            </div>

            <div class="col col-md-6">
                <span class="label">Bio</span>
                <div class="col col-md-10 border-top border-black">
                <br> 

                <p class="mb-2" style="text-align: justify; text-justify: inter-word; font-family: var(--main-font); font-size: 16px">{{description}}</p>

                </div>

                <span class="label">Reviews</span>
                <div class="col col-md-10 border-top border-black">
                <br> 
                    {{#each reviews}}
                    {{> profile_review_partial this}}
                    {{/each}}
                </div>
            </div>

            <div class="col col-md-4">
                <span class="label">About</span>

                <br>

                <span class="fw-bold">Location</span>

                <br>

                <span>{{location}}</span>

                <br>

                <span class="fw-bold">Joined Since</span>

                <br>

                <span>{{formatDate joined}}</span>

            </div>
        </div>

    </div>

    <div>

    </div>



</body>

</html>