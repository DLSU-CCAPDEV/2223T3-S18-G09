<!doctype html>
<html lang="en">

<head>
  <title>Main</title>
  {{> prerequisites}}
</head>

<body>
  <!-- script for js functionality -->
    <script type="text/javascript" src="../js/script.js"></script>

  <!-- Navbar -->
  {{> navbar }}

  <!-- background header -->
  <img class="establishment-header" src="../images/header.jpg" alt="Establishment Header">

  <div class="container" style="margin-top: 5%">
    <div class="row">

      <!-- Sidebar -->
      <div class="col-md-3">
        <h4>FILTERS</h4>

        <br>

        <div>
          <h4>Rating</h4>
          <span class="star-cb-group me-2" style="font-size: large;">
            <input type="radio" id="rating-5" name="rating" value="5" />
            <label for="rating-5">5</label>

            <input type="radio" id="rating-4" name="rating" value="4" />
            <label for="rating-4">4</label>

            <input type="radio" id="rating-3" name="rating" value="3" />
            <label for="rating-3">3</label>

            <input type="radio" id="rating-2" name="rating" value="2" />
            <label for="rating-2">2</label>

            <input type="radio" id="rating-1" name="rating" value="1" />
            <label for="rating-1">1</label>

            <input type="radio" id="rating-0" name="rating" value="0" class="star-cb-clear" checked />
            <label for="rating-0">0</label>
          </span>
          
          <br>

          <button id="filterReset" class="p-2 btn btn-primary submit-button" >Reset Filters</button>
        </div>

      </div>
      <div class="col-md-9">
        <h3 style="margin-bottom: 20px;"> Establishments </h3>
        {{#each establishments}}
          <div class="establishment-item" data-rating="{{overall_rating}}">
            {{> establishment_list_partial this}}
          </div>
        {{/each}}
      </div>
    </div>
  </div>



</body>

</html>