<!doctype html>
<html lang="en">

<head>
    <title>Establishment Page</title>
    
    <!-- Meta data -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CDNs for Bootstrap -->
