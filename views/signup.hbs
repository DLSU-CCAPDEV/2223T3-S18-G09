<!doctype html>
<html lang="en">

<head>
    <title>Sign Up</title>
    {{> prerequisites}}

    <!-- links the javascript file to this html file -->
    <script src="../js/signupScript.js"></script>
    <script src="../js/validator.min.js" type="text/javascript"></script>
</head>

<body>
    <!-- navigation bar -->
    <nav class="navbar navbar-expand-sm navbar-light px-2">
        <div class="container-fluid">
            <div style="padding-right: 10%">
                <a class="logo" href="/establishments-list">Palatable</a>
            </div>
    </nav>

    <div class="container" style="margin-top: 10%">
        <div class="row">
            <div class="col text-center">
                <div class="container" style="width: 300px;">

                    <h1 class="label"> Sign Up for Palatable </h1>
                    <h3 class="mb-3 sublabel"> Search and discover restaurants </h3>

                    <form action="/signup" style="width: 300px;" method="post">
                        <div class="container mb-3">
                            <div class="row">

                                {{!-- input field for the first_name --}}
                                <div class="col-6 ps-0 pe-1">
                                    <input id="first_name" class="form-control" type="text" name="first_name" placeholder="First Name" required>
                                </div>


                                {{!-- input field for the last_name --}}
                                <div class="col-6 pe-0 ps-1">
                                    <input id="last_name" class="form-control" type="text" name="last_name" placeholder="Last Name" required>
                                </div>

                            </div>
                                <p id="first_nameError">{{first_nameError}}</p>
                                <p id="last_nameError">{{last_nameError}}</p>
                        </div>

                        {{!-- input field for the username --}}
                        <div class="mb-3">
                            <input id="username" class="login-input form-control" type="text" name="username" placeholder="Username" required>
                            <p id="usernameError"></p>
                        </div>

                        {{!-- input field for the password --}}
                        <div class="mb-3">
                            <input id="password" class="login-input form-control" type="password" name="password" placeholder="Password" required>
                            <p id="passwordError">{{passwordError}}</p>
                        </div>

                        {{!-- input field for the password --}}
                        {{!-- TODO: fix the functionality of the avatar retrieval later --}}
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="avatar-upload">Avatar</label>
                            <input id="avatarInpFile" type="file" name="avatarInpFile" class="form-control" accept="image/*" required>
                        </div>
                            <p id="avatarInpFileError"></p>

                        {{!-- input field for the description --}}
                        <div class="mb-3" style="width: 300px;">
                            <textarea id="description" class="rounded" name="description"
                                placeholder="Tell us about yourself! (optional)"></textarea>
                        </div>

                        <div class="mb-3">
                            <button type="button" id="signupButton" class="btn btn-primary submit-button" style="width: 300px;" disabled>Sign
                                up</button>
                        </div>
                        <p id="error"></p>
                        <div style="text-align: right">
                            <h6 style="font-size: 12px;"> Already on Palatable? <a href="/login"> Log in </a></h6>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col d-none d-lg-block">
                <img src="../images/signup-image.png" style="width: 550px;">
            </div>
        </div>
    </div>
    </div>
</body>

</html>